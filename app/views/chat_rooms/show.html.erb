<h1><%= @chat_room.title %></h1>

<div id="messages" data-chat-room-id="<%= @chat_room.id %>">
  <%= render @chat_room.messages %>
</div>

<%= form_for @message, url: '#' do |f| %>
  <div class="form-group">
    <%= f.label :body, "Comment here:" %>
    <%= f.text_area :body, class: 'form-control' %>
    <small class="text-muted">From 2 to 1000 characters</small>
  </div>

  <%= f.submit "Post", class: 'btn btn-primary btn-lg' %>
<% end %>

<br>
<br>
<h1>Select from your IG!</h1>
<% @client.user_recent_media.each do |media_item| %>
  <div class="ig-photos" style='float:left;'>
  <img src='<%= media_item.images.thumbnail.url %>'><br/>
  <br>
  <br>
  </div>
<% end %>


